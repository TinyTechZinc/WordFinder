<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="UI.Pages.SolverPage"
			 xmlns:views="clr-namespace:UI.Views"
			 Title="Solver">
	
	<Grid VerticalOptions="Fill" Padding="5" >
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<ScrollView Grid.Column="0" Grid.Row="0">
			<VerticalStackLayout x:Name="WordHolder"/>
		</ScrollView>
		<views:CustomKeyboardView Grid.Column="0" Grid.Row="1" />
	</Grid>
</ContentPage>