<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="UI.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:UI"
	xmlns:pages="clr-namespace:UI.Pages"
	Shell.FlyoutBehavior="Flyout"
	Title="Word Finder">

	<ShellContent
		Title="Home"
		ContentTemplate="{DataTemplate local:MainPage}"
		Route="MainPage" />
	<ShellContent
		Title="Word Game"
		ContentTemplate="{DataTemplate pages:WordGamePage}"
		Route="WordGame" />
	<ShellContent
		Title="Solver"
		ContentTemplate="{DataTemplate pages:SolverPage}"
		Route="Solver" />
	<ShellContent
		Title="Finder"
		ContentTemplate="{DataTemplate pages:FinderPage}"
		Route="Finder" />

</Shell>
